{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jest": true
    },
    "extends": ["airbnb-base"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "semi": [2, "never"],
        "no-plusplus": 0,
        "prefer-destructuring": 0,
        "operator-linebreak": 0,
        "no-use-before-define": 0,
        "comma-dangle": [
            "error",
            {
                "functions": "never"
            }
        ],
        "indent": ["error", 4]
    }
}
